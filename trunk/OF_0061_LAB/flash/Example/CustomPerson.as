/******************************************************************	CUSTOM PERSON	a simple class that moves + sizes a square 	based on a CYA person	******************************************************************/package{	import com.lab.CYAPerson;	import com.lab.CYAEvent;	import flash.display.MovieClip;	import flash.display.Shape;	import flash.text.TextField;		public class CustomPerson extends MovieClip	{		var person:CYAPerson;		var infoMC:MovieClip;						public function CustomPerson( _person:CYAPerson )		{			super();			person = _person;			addChild(person);						// listen for the person update event, which is dispatched			// every time CYA gets new info about a person object			person.addEventListener( CYAEvent.PERSON_UPDATED, update );			update();		}				// update the x, y, width, height, and info text				public function update( e:CYAEvent = null )		{			x = person.x;			y = person.y;			centerpoint.x = person.centroid.x - x;			centerpoint.y = person.centroid.y - y;			info_txt.text = "id:" + person.id + "\nage:" + person.age;			bg_mc.width = person.realWidth;				bg_mc.height = person.realHeight;		}	}}